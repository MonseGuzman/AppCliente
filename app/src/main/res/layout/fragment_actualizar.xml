<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ParaMenu"
    tools:context=".ActualizarFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/elotro">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="230dp"
            android:layout_height="219dp"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/divider_horizontal_dark"
            android:elevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.297"
            app:srcCompat="@android:color/background_light" />

        <LinearLayout
            android:layout_width="224dp"
            android:layout_height="218dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/btCambiar_Actualizar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.876">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ingrese su contraseña actual:"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="184dp" />

            <EditText
                android:id="@+id/etActual_Actualizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="Contraseña actual"
                android:inputType="textPassword"
                android:maxEms="8"
                android:textAlignment="center"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="72dp"
                tools:layout_editor_absoluteY="172dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Ingrese nueva contraseña (hasta 8 caracteres)"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="83dp"
                tools:layout_editor_absoluteY="223dp" />

            <EditText
                android:id="@+id/etNueva_Actualizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="Contraseña nueva"
                android:inputType="textPassword"
                android:maxLength="8"
                android:textAlignment="center"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="104dp"
                tools:layout_editor_absoluteY="274dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="109dp"
            android:layout_height="105dp"
            android:layout_marginRight="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.059"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="180dp"
            android:layout_height="72dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="24dp"
            android:text="Cambio de Contraseña"
            android:textAlignment="center"
            android:textColor="@color/primaryColor"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btCambiar_Actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/spinner_dropdown_background"
            android:text="Cambiar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>